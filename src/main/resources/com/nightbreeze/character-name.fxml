<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="360.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nightbreeze.controller.characterCreation.characterNameController">
    <children>
        <VBox alignment="CENTER" prefHeight="360.0" prefWidth="600.0">
            <children>
                <Label text="Character Name:" />
                <TextField fx:id="characterName" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="250.0">
                    <VBox.margin>
                        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                    </VBox.margin>
                </TextField>
                <Button fx:id="createCharacterButton" mnemonicParsing="false" onAction="#createCharacterButtonOnAction" text="Choose Character Name" />
            </children>
        </VBox>
    </children>
</AnchorPane>
